%h3
  = @admin_user.name
  = link_to t('global.edit'), edit_admin_user_path(@admin_user), :class => "btn small right"

%hr

%table.zebra-striped
  %tr
    %td
      %b
        = t 'activerecord.attributes.user.email'
    %td
      = @admin_user.email
  %tr
    %td
      %b
        = t 'activerecord.attributes.user.admin'
        %td= check_box_tag "admin", 1, @admin_user.admin, :disabled => :disabled
  %tr
    %td
      %b
        = t 'activerecord.attributes.user.projects_limit'
    %td
      = @admin_user.projects_limit
  - unless @admin_user.skype.empty?
    %tr
      %td
        %b
          = t 'activerecord.attributes.user.skype'
      %td
        = @admin_user.skype
  - unless @admin_user.linkedin.empty?
    %tr
      %td
        %b
          = t 'activerecord.attributes.user.linkedin'
      %td
        = @admin_user.linkedin
  - unless @admin_user.twitter.empty?
    %tr
      %td
        %b
          = t 'activerecord.attributes.user.twitter'
      %td
        = @admin_user.twitter

%h3
  = t 'admin.users.index.projects'
%hr

%table.zebra-striped
  %tr
    %thead
      %th
        = t 'admin.projects.index.name'
      %th
        = t 'admin.projects.show.team.member.project_access'
      %th
        = t 'admin.projects.show.team.member.repo_access'
      %th
      %th

  - @admin_user.users_projects.each do |tm|
    - project = tm.project
    %tr
      %td= link_to project.name, admin_project_path(project)
      %td= select_tag :tm_project_access, options_for_select(Project.access_options, tm.project_access), :class => "medium project-access-select", :disabled => :disabled
      %td= link_to t('admin.projects.show.team.member.edit_access'), edit_admin_team_member_path(tm), :class => "btn small"
      %td= link_to t('admin.projects.show.team.member.remove'), admin_team_member_path(tm), :confirm => 'Are you sure?', :method => :delete, :class => "btn small danger"

= form_tag team_update_admin_user_path(@admin_user), :class => "bulk_import", :method => :put  do 
  %table
    %thead
      %tr
        %th
          = t 'admin.projects.index.name'
        %th
          = t 'admin.projects.show.team.member.project_access'
        %th
          = t 'admin.projects.show.team.member.repo_access'


    %tr
      %td= select_tag :project_ids, options_from_collection_for_select(@projects , :id, :name),  :multiple => true
      %td= select_tag :project_access, options_for_select(Project.access_options), :class => "project-access-select"

  .actions
    = submit_tag t('admin.projects.show.team.member.add'), :class => "btn primary"


:css 
  form select { 
    width:150px;
  }

  #project_ids {
    width:300px;
  }

  
:javascript 
  $('select#project_ids').chosen();
  $('select#repo_access').chosen();
  $('select#project_access').chosen();

