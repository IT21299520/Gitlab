%h3 
  = t '.title'
  = link_to t('.new'), new_admin_project_path, :class => "btn small right"
%br
%table.zebra-striped.table-bordered
  %thead
    %th
      = t '.name'
    %th
      = t '.path'
    %th
      = t '.team_count'
    %th
      = t '.last_commit'
    %th
    %th

  - @admin_projects.each do |project|
    %tr
      %td= link_to project.name, [:admin, project]
      %td= project.path
      %td= project.users_projects.count
      %td= last_commit(project)
      %td= link_to t('global.edit'), edit_admin_project_path(project), :id => "edit_#{dom_id(project)}", :class => "btn small"
      %td= link_to t('global.destroy'), [:admin, project], :confirm => t('global.destroy_confirm'), :method => :delete, :class => "btn small danger"
= paginate @admin_projects, :theme => "admin"
