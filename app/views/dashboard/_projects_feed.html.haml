- projects.first(5).each do |project|
  %div.dash_project_item
    %h4
      = link_to project, :class => "project_link" do 
        %span.ico.project
        = truncate project.name, :length => 24
      %small
        = t('.last_active') 
        = project.last_activity_date.stamp(t('global.timestamp'))

      .right 
        %small
          %strong= link_to t('.browse_code'), tree_project_ref_path(project, project.root_ref), :class => "neib gray"
          %strong= link_to t('.commits'), project_commits_path(project), :class => "gray"
