%h3
  = t 'merge_requests.head.title'
  - if can? current_user, :write_issue, @project
    = link_to new_project_merge_request_path(@project), :class => "right btn small", :title => t('merge_requests.new.title') do 
      = t 'merge_requests.new.title'

%br

.ui-box
  .title
    %ul.nav.nav-pills
      %li{:class => ("active" if (params[:f] == "0" || !params[:f]))}
        = link_to project_merge_requests_path(@project, :f => 0) do 
          = t '.open'
      %li{:class => ("active" if params[:f] == "2")}
        = link_to project_merge_requests_path(@project, :f => 2) do 
          = t '.closed'
      %li{:class => ("active" if params[:f] == "3")}
        = link_to project_merge_requests_path(@project, :f => 3) do 
          = t '.to_me'
      %li{:class => ("active" if params[:f] == "1")}
        = link_to project_merge_requests_path(@project, :f => 1) do 
          = t '.all'

  %ul.unstyled
    = render @merge_requests
    - if @merge_requests.blank?
      %li
        %p.padded
          = t '.no_requests'
    - if @merge_requests.present?
      %li.bottom
        .row
          .span7= paginate @merge_requests, :theme => "gitlab"
          .span4.right
            %span.cgray.right
              = t '.matching_requests', :count => @merge_requests.total_count

