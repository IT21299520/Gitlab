%h3
  = t '.title'
  %small
    = t '.assigned_to_you'

%br
%div#issues-table-holder.ui-box
  %title
  %ul#issues-table.unstyled
    - if @issues.any?
      - @issues.group_by(&:project).each do |group|
        %li.wll.smoke
          - project = group[0]
          = project.name
        - group[1].each do |issue|
          = render(:partial => 'issues/show', :locals => {:issue => issue})
      %li.bottom
        .row
          .span7= paginate @issues, :theme => "gitlab"
          .span4.right
            %span.cgray.right
              #{@issues.total_count}
              = t '.total'

    - else
      %li
        %p.padded
          = t '.no_issues'
