%h3 #{@author.name} pushed to #{@branch} at #{@project.name_with_namespace}

%h4 Commits:

%ul
  - @commits.each do |commit|
    %li
      %strong #{commit.short_id}
      %span by #{commit.author_name}
      %pre #{commit.safe_message}

%h4 Changes:
- @diffs.each do |diff|
  %li
    %strong
      - if diff.old_path == diff.new_path
        = diff.new_path
      - elsif diff.new_path && diff.old_path
        #{diff.old_path} &rarr; #{diff.new_path}
      - else
        = diff.new_path || diff.old_path
    %hr
    :ruby
      require 'rouge'
      formatter = Rouge::Formatters::HTML.new(:css_class => 'highlight')
      lexer = Rouge::Lexers::Diff.new
      haml_io.puts formatter.format(lexer.lex(diff.diff))
    %br

- if @compare.timeout
  %h5 Huge diff. To prevent performance issues changes are hidden
