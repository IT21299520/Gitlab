- if @projects.any?
  .row
    .span8
      = render @events
    .span4.right
      %div.leftbar.ui-box
        %h5
          = t 'projects.projects'
          %small
            (#{@projects.count})
          - if current_user.can_create_project?
            %span.right
              = link_to new_project_path, :class => "btn very_small info" do 
                = t 'dashboard.index.projects.new'
        .content_list
          - @projects.each do |project|
            = link_to project_path(project), :class => dom_class(project) do
              %h4
                %span.ico.project
                = truncate(project.name, :length => 25)
                %span.right
                  &rarr;

- else 
  %h3
    = t '.none'
  %br
  - if current_user.can_create_project?
    .alert-message.block-message.warning
      = t 'dashboard.index.projects.maximum', :limit => current_user.projects_limit
      .link_holder
        = link_to new_project_path, :class => "" do 
          = t 'dashboard.index.projects.new'
  - else 
    = t '.wait_for_add'
