/ Page Header
%header.top_panel_holder
  .wrapper
    .top_panel_content
      %div.app_logo
        = link_to root_path, :class => "home", :title => t('.home') do 
          %h1 
            GITLAB
      %h1.project_name= title
      .search
        = form_tag search_path, :method => :get do |f|
          = text_field_tag "search", nil, :placeholder => t('.search'), :class => "search-input"
      - if current_user.is_admin?
        = link_to admin_projects_path, :class => "admin_link", :title => t('.admin_area') do 
          = image_tag "admin.PNG", :width => 16
      .account-box
        = link_to profile_path, :class => "pic" do
          = image_tag gravatar_icon(current_user.email)
        .account-links
          = link_to profile_path, :class => "username" do
            = t '.profile'
          = link_to t('.logout'), destroy_user_session_path, :class => "logout", :method => :delete

:javascript
  $(function(){
    $("#search").autocomplete({
      source: #{raw search_autocomplete_source},
      select: function(event, ui) { location.href = ui.item.url }
    });

    $(document).keypress(function(e) {
      if($(e.target).is(":input")) return;
        switch(e.which)  {
        case 115:  focusSearch();
        e.preventDefault();
      }
    });
  });

