- @issues.each do |issue|
  .wll
    = link_to [issue.project, issue] do 
      %p
        %strong
          %span= issue.project.name
          &ndash;
          = t('dashboard.issues.issue_no')
          = issue.id
        = truncate issue.title, :length => 50
        %span.right.cgray
          = issue.updated_at.stamp(t('global.timestamp'))
