= form_for [@project, @wiki] do |f|
  -if @wiki.errors.any?
    .alert-message.block-message.error
      %ul
        - @wiki.errors.full_messages.each do |msg|
          %li= msg

  .alert-message.block-message.warning
    %p 
      = t '.md'
      = link_to "Markdown", "http://en.wikipedia.org/wiki/Markdown"
      %br
      = t '.link'
      %code [Link Title](page-slug)
  .clearfix
    = f.label :title
    .input= f.text_field :title, :class => :xxlarge
    = f.hidden_field :slug
  .clearfix
    = f.label :content
    .input= f.text_area :content, :class => :xxlarge
  .actions
    = f.submit t('global.save'), :class => "primary btn"
    = link_to t('global.reset'), project_wiki_path(@project, :index), :class => "btn"
