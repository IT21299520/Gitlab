%fieldset
  %legend
    Search results
    %span.cgray (#{@total_results})

- if @project
  %ul.nav.nav-pills
    %li{class: ("active" if params[:search_code].to_i==1)}
      = link_to search_path(params.merge(search_code: "1")) do
        Repository Code
    %li{class: ("active" if params[:search_code].to_i==2)}
      = link_to search_path(params.merge(search_code: "2")) do
        Everything else (Filenames)
    %li{class: ("active" if params[:search_code].to_i==3)}
      = link_to search_path(params.merge(search_code: "3")) do
        Wiki-Pages


.search_results
  %ul.bordered-list
    - @projects.each do |project|
      %li
        project:
        = link_to project do
          %strong.term= project.name_with_namespace
    - @merge_requests.each do |merge_request|
      %li
        merge request:
        = link_to [merge_request.project, merge_request] do
          %span ##{merge_request.id}
          %strong.term
            = truncate merge_request.title, length: 50
        %span.light (#{merge_request.project.name_with_namespace})
    - @issues.each do |issue|
      %li
        issue:
        = link_to [issue.project, issue] do
          %span ##{issue.id}
          %strong.term
            = truncate issue.title, length: 50
        %span.light (#{issue.project.name_with_namespace})
    - @wiki_pages.each do |wiki_page|
      %li
        wiki:
        = link_to project_wiki_path(wiki_page.wiki.project.path_with_namespace, wiki_page) do
          %strong.term
            = truncate wiki_page.title, length: 50
        %span.light (#{wiki_page.wiki.path_with_namespace})

    - @wiki_pages_blob.each do |wiki_page|
      = render 'wiki_blob', blob: wiki_page
    - @blobs.each do |blob|
      = render 'blob', blob: blob

  = paginate @wiki_pages_blob, theme: 'gitlab'
  = paginate @blobs, theme: 'gitlab'

:javascript
  $(function() {
    $(".search_results .term").highlight("#{escape_javascript(params[:search])}");
  })

