- tree_limit = 20 unless local_assigns[:tree_limit]

%tr{ class: "tree-item #{blob_item_counter < tree_limit ? '' : 'hide'}" }
  %td.tree-item-file-name
    = tree_icon(type, blob_item[:mode], blob_item[:path])
    %span.str-truncated
      = link_to blob_item[:path], namespace_project_blob_path(project.namespace, project, tree_join(id || commit.id, blob_item[:path]))
