.projects-box
  %h5
    Projects
    %small
      (#{projects.count})
    - if can? current_user, :manage_group, @group
      %span.right
        = link_to new_project_path(namespace_id: @group.id), class: "btn tiny info" do
          %i.icon-plus
          New Project
  %ul.unstyled
    - projects.each do |project|
      %li.wll
        = link_to project_path(project), class: dom_class(project) do
          %strong.project-name= truncate(project.name, length: 25)
          %span.arrow
            &rarr;
          %span.last-activity
            %strong Last activity:
            %span= project_last_activity(project)
