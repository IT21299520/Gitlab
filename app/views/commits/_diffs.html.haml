- if @suppress_diff
  .alert-message.block-message
    %p 
      %strong
        = t '.warning.title'
    %p
      = t '.warning.reason'
    %p 
      = t '.warning.continue'
      = link_to t('.warning.continue_href'), project_commit_path(@project, @commit.id, :force_show_diff => true), :class => "dark" 


%p.cgray
  = t '.title.showing'
  #{pluralize(diffs.count, t('.title.changes'), t('.title.changes_plural'))}
.file_stats
  = render "commits/diff_head", :diffs => diffs


- unless @suppress_diff
  - diffs.each_with_index do |diff, i|
    - next if diff.diff.empty?
    - file = (@commit.tree / diff.new_path)
    - file = (@commit.prev_commit.tree / diff.old_path) unless file
    - next unless file
    .diff_file
      .diff_file_header
        - if diff.deleted_file
          %strong{:id => "#{diff.old_path}"}= diff.old_path
        - else
          = link_to tree_file_project_ref_path(@project, @commit.id, diff.new_path) do
            %strong{:id => "#{diff.new_path}"}= diff.new_path
        %br/
      .diff_file_content
        - if file.text?
          = render "commits/text_file", :diff => diff, :index => i
        - elsif file.image?
          .diff_file_content_image
            %img{:src => "data:#{file.mime_type};base64,#{Base64.encode64(file.data)}"}
        - else
          %p
            %center
              = t '.no_preview'

